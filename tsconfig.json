{
    "compilerOptions": {
        "target": "es5",
        "module": "system",
        "moduleResolution": "node",
        "isolatedModules": false,
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "sourceMap": true
    },
    "filesGlob": [
        "**/*.ts",
        "**/*.tsx",
        "!node_modules/**"
    ],
    "compileOnSave": true,
    "buildOnSave": false,
    "files": [
        "src/app.ts",
        "src/boot.ts",
        "src/bus/route.component.ts",
        "src/bus/route.service.ts",
        "src/map/map.component.ts",
        "src/map/map.service.ts",
        "typings/jquery/jquery.d.ts"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
